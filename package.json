    "build": "tsdown",
    "prepublishOnly": "pnpm build"
  },
  "prettier": "@tomer/prettier-config",
  "dependencies": {
    "http-shutdown": "^1.2.2",
    "prismjs": "^1.30.0",
    "puppeteer": "^24.18.0"
  },
  "devDependencies": {
    "@tomer/eslint-config": "^4.1.1",
    "@tomer/prettier-config": "^4.0.0",
    "@types/prismjs": "^1.26.5",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "publint": "^0.3.12",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2"
  }
