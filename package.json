{
  "name": "src2img",
  "version": "4.0.0",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomer@aberba.ch",
    "url": "https://tomeraberba.ch"
  },
  "description": "Converts source code to high quality images.",
  "keywords": [
    "source",
    "images",
    "screenshot",
    "converter",
    "beautiful"
  ],
  "homepage": "https://github.com/TomerAberbach/src2img",
  "repository": "TomerAberbach/src2img",
  "bugs": {
    "url": "https://github.com/TomerAberbach/src2img/issues"
  },
  "funding": {
    "url": "https://github.com/sponsors/TomerAberbach"
  },
  "license": "MIT",
  "files": [
    "dist",
    "themes"
  ],
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">= 22"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "format": "prettier --cache --write .",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/ --fix .",
